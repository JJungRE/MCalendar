<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/bg_color"
    android:minWidth="500dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Orange800"
                android:padding="@dimen/activity_half_horizontal_margin"
                android:text="@string/set_company_text"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="@dimen/main_xlarge_text_size"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_half_horizontal_margin"
                android:layout_marginTop="@dimen/activity_half_horizontal_margin"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sk_iv"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="49dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_company_selected"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/sk_logo" />

                <ImageView
                    android:id="@+id/kt_iv"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/kt_logo" />

                <ImageView
                    android:id="@+id/lg_iv"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="42dp"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/lg_logo" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/Orange100"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/company_back_bt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_button_grey"
                    android:text="이전"
                    android:textColor="@color/White"
                    android:textSize="@dimen/main_large_text_size" />

                <Button
                    android:id="@+id/company_next_bt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
                    android:background="@drawable/border_button_orange"
                    android:text="다음"
                    android:textColor="@color/White"
                    android:textSize="@dimen/main_large_text_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>