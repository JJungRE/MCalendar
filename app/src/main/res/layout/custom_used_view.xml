<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_cll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    //이 부분이 dynamic view 부분 Linear inflate 함.

    <LinearLayout
        android:id="@+id/con_top_cll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_view_used_top"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/used_month_tv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.25"
            android:background="@drawable/fire2"
            android:gravity="center"
            android:text="11"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/used_text_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:gravity="center"
            android:text="이번달 태운 포인트"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/used_month_point_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/main_red"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/just_top_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:textColor="@color/main_red"
            android:text="P"
            android:textSize="@dimen/main_middle_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_cll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_half_horizontal_margin"
        android:weightSum="1">

        <TextView
            android:id="@+id/used_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/used_date_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="2017-09-01"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/used_title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="11번가"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/used_point_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:gravity="right"
            android:text="500"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />

        <TextView
            android:id="@+id/just_middle_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:layout_weight="0.03"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size" />


    </LinearLayout>
</LinearLayout>