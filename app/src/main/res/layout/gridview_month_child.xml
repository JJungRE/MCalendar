<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:text="1"
        android:textColor="@color/main_black"
        android:textSize="@dimen/main_small_text_size"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/default_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:src="@mipmap/ic_launcher"
            android:textSize="@dimen/main_small_text_size" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/ic_launcher"
            android:textSize="@dimen/main_small_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/over_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total_tv"
            android:layout_margin="@dimen/activity_half_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_dot"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/main_xlarge_text_size" />

    </LinearLayout>
</LinearLayout>