<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
        android:layout_marginRight="@dimen/activity_half_horizontal_margin">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border_setup_black"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="푸시알림"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/main_middle_text_size"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/push_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/setup_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_half_horizontal_margin"
            android:background="@color/bg_color"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_half_horizontal_margin"
            android:paddingRight="@dimen/activity_half_horizontal_margin"
            android:text="메인"
            android:textColor="@color/main_black"
            android:textSize="@dimen/main_middle_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_half_horizontal_margin"
        android:layout_marginRight="@dimen/activity_half_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_half_horizontal_margin"
            android:background="@drawable/border_setup_black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_half_horizontal_margin"
                    android:paddingRight="@dimen/activity_half_horizontal_margin"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/all_radiobtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="모든 카테고리"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/main_middle_text_size"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/custom_radiobtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="관심 카테고리 선택"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/main_middle_text_size"
                        android:textStyle="bold" />
                </RadioGroup>

            </LinearLayout>


        </LinearLayout>

        <GridView
            android:id="@+id/category_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:padding="@dimen/activity_quarter_horizontal_margin"
            android:background="@drawable/border_all_line_black"
            android:layout_marginBottom="@dimen/activity_half_horizontal_margin"
            android:gravity="center"
            android:horizontalSpacing="@dimen/activity_quarter_horizontal_margin"
            android:verticalSpacing="@dimen/activity_quarter_horizontal_margin"
            android:numColumns="5"
            android:stretchMode="columnWidth" />

    </RelativeLayout>

</LinearLayout>