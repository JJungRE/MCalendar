<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/activity_half_horizontal_margin"
            android:layout_marginTop="@dimen/activity_half_horizontal_margin"
            android:src="@drawable/ic_cancel_black_48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/activity_half_horizontal_margin"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_all_line_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SKT"
                android:textColor="@color/main_black"
                android:textSize="@dimen/main_middle_text_size"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_all_line_gray"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/skt_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_all_line_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KT"
                android:textColor="@color/main_black"
                android:textSize="@dimen/main_middle_text_size"
                android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_all_line_gray"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/kt_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_all_line_gray"
            android:orientation="vertical">
            <TextView
                android:layout_width="@dimen/dp30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LG"
                android:textColor="@color/main_black"
                android:textSize="@dimen/main_middle_text_size"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_all_line_gray"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/lg_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>