<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:minWidth="300dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_used_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Orange800"
                android:paddingBottom="@dimen/activity_half_horizontal_margin"
                android:paddingTop="@dimen/activity_half_horizontal_margin"
                android:text="@string/set_used_tv"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="@dimen/main_xlarge_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/used_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_button_white"
                    android:ems="5"
                    android:gravity="center"
                    android:hint="결제금액"
                    android:textColor="@color/main_black"
                    android:inputType="number"
                    android:textSize="@dimen/main_xlarge_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_black"
                    android:text=" 원"
                    android:textSize="@dimen/main_xlarge_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/used_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/used_tv"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/main_xlarge_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ex_used_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/Red50"
                    android:textSize="@dimen/main_xlarge_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="0.4"
                    android:text=" P 입니다."
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/main_xlarge_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/used_close_bt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border_button_grey"
                    android:text="닫기" />

                <Button
                    android:id="@+id/used_set_bt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_button_orange"
                    android:text="사용처리" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>