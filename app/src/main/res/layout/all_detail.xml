<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_quarter_horizontal_margin"
        android:layout_marginRight="@dimen/activity_quarter_horizontal_margin"
        android:layout_marginTop="@dimen/activity_quarter_horizontal_margin"
        android:id="@+id/class_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/bg_color">

        <LinearLayout
            android:id="@+id/main_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_half_horizontal_margin">

        </LinearLayout>
    </ScrollView>
</LinearLayout>