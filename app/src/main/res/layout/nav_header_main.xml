<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?android:actionBarSize"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/White"
    android:id="@+id/header_linear">

    <ImageView
        android:id="@+id/header_main_img"
        android:layout_width="120dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:background="@drawable/g_category_ai"/>

    <TextView
        android:id="@+id/header_main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_half_horizontal_margin"
        android:gravity="center"
        android:textSize="@dimen/main_large_text_size"
        android:textStyle="bold"
        android:textColor="@color/main_id_color"
        android:text="로그인" />

</LinearLayout>
